<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#AEFFFFFF"
    card_view:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_guide"
            android:layout_marginLeft="3dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Guide Name"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_pno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="PNo. : "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/guide_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Guide department"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Mob : "
                    android:textColor="#020bb1"
                    android:textSize="15sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dip"
                    android:text="Guide email :"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>


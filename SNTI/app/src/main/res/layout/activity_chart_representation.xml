<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chart_representation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="madhukar.com.example.dell.snti.ChartRepresentation">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chartToolbar"
        android:paddingTop="@dimen/app_bar_padding"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/chartOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            </Spinner>
            <Spinner
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/chartOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

            </Spinner>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/chartFrameholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chartToolbar">

    </FrameLayout>
</RelativeLayout>

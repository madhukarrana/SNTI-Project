<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardBackgroundColor="#AEFFFFFF"
    card_view:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guide_trainee_vt"
            android:layout_marginLeft="3dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="VT20172023"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"/>
        <RelativeLayout
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guide_trainee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Trainee Name"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_trainee_institute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="NIT JAMSHEDPUR"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_trainee_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="COMPUTER SCIENCE"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/guide_trainee_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Start  Date : 16/05/2017"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/guide_trainee_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="End  Date : 07/06/2017"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:typeface="sans" />




            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>